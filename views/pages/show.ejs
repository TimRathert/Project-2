<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>InstantGramification</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <%- include ('../partials/head') %>
    <link rel="stylesheet" href="/static/styles.css">
    <nav class='navbar' style="background-color: #0077cd"></nav>
   
    </head>
    <body>
        <main class="show-body">
        
        <section>
            <div class="content-show">
                
                <img class= "show-page-image" src = "<%= thisImage.url %>">
                <p><%= thisImage.user.username %>: <%= thisImage.description %></p>
                <p>Likes: <%= thisImage.likes %></p>
                <button class="edit-show-btn">
                    <a class = "edit-show-btn" href="/images/<%= thisImage.id %>/edit">Edit post</a>
                </button>
            </div>
            <div>
                
                <ul>
                    <% for( let i = 0; i < thisComments.length; i++ ) { %>
                        
                        <li><img src = <%= thisComments[i].user.profImage%> width="20px" height="20px"> <%= thisComments[i].user.username%>: <%= thisComments[i].content %></li>
                        
                        <% } %>
                    </ul>
        </div>
<!-- NEW COMMENT FORM -->
        <form action="/comments" method="POST" id="content" class="content-text">
            <div>
                <textarea 
                    id="content" 
                    name="content" 
                    row="3"
                    placeholder="New Comment">
                    
                </textarea>
                <input id="show-comment-btn" type="submit" value="Add Comment"/>
                
                <input type="hidden" name="image" id="image" value="<%= thisImage.id%>">
            </div>
        </form>
        
        <!-- DELETE FORM -->        
        <form method="POST" action="/images/<%=thisImage._id%>?_method=DELETE">
            <button id="show-page-delete" class="btn btn-primary btn-lg">Delete post</button>
        </form>
    </section>
    </main>
</body>
</html>